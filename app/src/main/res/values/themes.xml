<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ProyectoFinalDAM135" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/SteelBlue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="editTextStyle">@style/edittextPersonalizado</item>
        <item name="android:textViewStyle">@style/textviewPersonalizado</item>
        <item name="materialButtonStyle">@style/buttonPersonalizado</item>
    </style>

    <style name="Theme.ProyectoFinalDAM135" parent="Base.Theme.ProyectoFinalDAM135" />

    <style name="textviewPersonalizado" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edittextPersonalizado" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/lightgray</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="buttonPersonalizado" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/SteelBlue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.buttonPersonalizado</item>
    </style>

    <style name="ShapeAppearance.buttonPersonalizado" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar"/>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>

    </style>

</resources>
